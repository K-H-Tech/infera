name: {{.ServiceName}}-ci

on:
  push:
    paths:
      - 'services/{{.ServiceName}}/**'
      - '.github/workflows/{{.ServiceName}}.ci.yml'

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2

      - name: Set up Go
        uses: actions/setup-go@v2
        with:
          go-version: 1.20

      - name: Build
        run: go build -v ./services/{{.ServiceName}}

      - name: Test
        run: go test -v ./services/{{.ServiceName}}/...
